        UPDATE ProjectDB
        SET title=#{project.title},
            description=#{project.description}
        WHERE ID=#{ID}
    </update>

    <delete id="deleteProject">
        DELETE FROM ProjectDB
        WHERE ID=#{ID}
    </delete>
</mapper>
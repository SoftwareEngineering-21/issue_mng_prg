<?xml version="1.0" encoding="UTF-8"?>

        <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.its.database.project.ProjectDBMapper">
<!--
    <update id="createProjectDetailDBTable">
        CREATE TABLE IF NOT EXISTS ProjectDetailDB (
            id INT AUTO_INCREMENT PRIMARY KEY,
            title VARCHAR(100) NOT NULL,
            description TEXT NOT NULL,
            adminId VARCHAR(45) NOT NULL
        )
    </update>
-->
    <insert id="createProject" useGeneratedKeys="true" keyProperty="id">
        insert INTO ProjectDetailDB(title, description, adminId)
        values (#{title}, #{description}, #{adminId})
    </insert>
    
    
    <select id="readProject" resultType="com.example.its.dataClassDB.ProjectDetailDB">
        select id, title, description, adminId
        from ProjectDetailDB
        where id=#{id}
    </select>

    <select id="readProjectList" resultType="com.example.its.dataClassDB.ProjectDetailDB">
        select *
        from ProjectDetailDB
        where adminId=#{adminId}
    </select>

    <update id="updateProject">
        UPDATE ProjectDetailDB
        SET title=#{project.title},
            description=#{project.description}
        WHERE id=#{id}
    </update>

    <delete id="deleteProject">
        DELETE FROM ProjectDetailDB
        WHERE id=#{id}
    </delete>
</mapper>